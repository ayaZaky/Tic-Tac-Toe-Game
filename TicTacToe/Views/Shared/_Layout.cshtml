<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tic-Tac-Toe</title>
    <link rel="icon" type="image/png" href="~/assets/favicon.png" />
    <script src="https://cdn.tailwindcss.com"></script>  
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
	<script src="~/js/init.js" asp-append-version="true"></script> 
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
</head>
<body onload="hideLoader()" class="background-layout">

    <div id="loading-screen">
        <img src="/assets/loader.png" alt="Logo" class="logo" />
        <div class="spinner"></div>
    </div>

    <main role="main">
        @RenderBody()
    </main>

    

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
   
 
 
<style>
    h1 {
        color: yellow;  
        text-shadow: 0px 0px 8px rgba(255, 255, 100, 1);
        font-weight: bold; 
        font-size: 28px;  
        margin-bottom: 10px; 
        margin-bottom: 20px; 
    }

    h2 {
        color: yellow;  
        text-shadow: 0px 0px 8px rgba(255, 255, 100, 1);  
        font-weight: bold;  
        font-size: 18px;  
        
    }      
    .glow-grid {    
        box-shadow: 0 0 15px rgba(0,50,255, 0.9);
        border-radius: 15px;
        padding: 10px;
        top: 50%;
    }   
    .glow-cell {
        box-shadow: inset 0 0 15px rgba(255, 223, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
		 
    }
     
    .glow-img-x {
        filter: drop-shadow(0px 0px 10px rgba(255, 223, 0, 1));  
    }
         
    .glow-img-o {
        filter: drop-shadow(0px 0px 15px rgba(10, 250, 120, 1));  
    }

    #player1-turn, #player2-turn {
        color: yellow;  
        font-weight: bold;  
        font-family: "Lucida Console", "Courier New", monospace;  
        font-size: 14px;  
        text-shadow: 0px 0px 5px rgba(255, 255, 100, 0.8);  
        padding-top: 8px;  
    }

    .player-label {
        font-family: "Lucida Console", "Courier New", monospace;
        text-transform: uppercase;
    }

   
    #player1-label {
        color: cyan; 
        text-shadow: 0px 0px 8px rgba(100, 255, 255, 1);  
    }

    #player2-label {
        color: yellow;  
        text-shadow: 0px 0px 8px rgba(255, 255, 100, 1);  
    }
    @@media (min-width: 768px) and (max-width: 1024px) {
    .grid{
        padding-right:25px;

    }
    .glow-cell {
			margin: 5px;
    }
    }
</style>